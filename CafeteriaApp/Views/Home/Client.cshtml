@model IEnumerable<CafeteriaApp.Models.Client>

@{
    ViewBag.Title = "Clientes";
}

<div class="row searchPanel">
    <div class="col-md-8 col-lg-8">
        <label class="sr-only" for="search">Buscar</label>
        <input type="text" class="form-control" id="search" placeholder="Buscar" required="required">
    </div>

    <div class="col-md-4 col-lg-4">
        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                Criterio
                <span class="caret"></span>
            </button>

            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Identificador</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Nombre</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Cédula</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Tipo</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Crédito</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Registro</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Estado</a></li>
            </ul>
        </div>
        <button type="submit" id="btnBuscar" class="btn btn-info">Buscar</button>
    </div>
</div>
<hr />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="col-md-1">Identificador</th>
            <th>Nombre</th>
            <th>Cédula</th>
            <th>Tipo</th>
            <th>Crédito</th>
            <th>Registro</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.Estado == "Inactivo" ? "danger" : "")">  
                <td>
                    @Html.DisplayFor(modelItem => item.Identificador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    RD$@Html.DisplayFor(modelItem => item.Credito) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registro)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.Estado)
                </td>
            </tr>
        }
    </tbody>
</table>